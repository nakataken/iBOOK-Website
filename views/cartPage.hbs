<body>
    {{> categoryHeader}}
    
    <!--Single Product-->
    <div class="space"></div>
    <section class="min-h container-fluid ">
        <div class="column cart col-md-10 col-12 mx-auto">
            
            <h1 class="col-10 mx-auto mt-4"><a href="/">Home /</a> Cart</h1>
            <!--Summary-->
            <div class="row col-md-8 col-12 mx-auto p-0">
                <div class="col-12 row top-title">
                    
                    <div class="row col-12 p-3 mxy-auto ">
                        <div class="col-4 text-center my-auto mx-auto">
                            <h5 class="py-0 text-left">Book Details</h3>
                        </div>
                        <div class="col-4 my-auto mx-auto ">
                            <h5 class="py-0 text-center">Price</h2>
                        </div>
                        
                        <div class="col-2 my-auto text-center">
                            <h5 class="py-0 text-center">Remove</h2>
                        </div>
                    </div>
                </div>
                {{#if book}}
                    {{#each book}}
                        <div class="col-12 cart-item mt-5 row">
                            <div class="col-2 p-3">
                                <a href="http://localhost:8080/display/{{this.item.BOOK_CATEGORY}}/{{this.item.BOOK_TITLE}}">
                                    <img src='http://localhost:8080/uploadedImages/{{this.item.BOOK_COVER}}' class="img-fluid">
                                </a>
                            </div>
                            <div class="row col-10 p-3 mxy-auto ">
                                <div class="col-6 my-auto mx-auto">
                                    <button type="button" class="btn btn-autor text-lim">{{this.item.BOOK_AUTHOR}}</button>
                                    <h3 class="py-0 ">{{this.item.BOOK_TITLE}}</h3>
                                </div>
                                <div class="col-4 my-auto mx-auto ">
                                    <h2 class="py-0 ">P {{this.item.BOOK_PRICE}}</h2>
                                </div>
                                
                                <div class="col-2 my-auto text-center">
                                     <a href="/shop/remove/{{this.item.BOOK_ID}}"><i class="fas fa-times fa-2x"></i></a>
                                </div>
                            </div>
                        </div>                       

                    {{/each}}
                {{else}}
                        <div class="col-12 mx-auto p-0">
                            <div class="row d-flex align-items-center">
                                <div class="col-md-12 py-2">
                                    <div class="card">
                                        <div class="card-body">
                                            <div>
                                                <h4>No books in the cart</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                {{/if}}
                
               
            </div>

            <!--Total-->

            <div class="row col-md-8 col-12 mx-auto p-0">
                     <div class="col-12 check-out mt-5 p-0 row">
                        
                        <div class="col-6 row ml-auto mt-3">
                           <h4 class="ml-auto my-auto mr-2">TOTAL: </h4>
                           <h3 for="total-amount" class="my-auto">{{totalPrice}}</h3>
                        </div>
                       
                        <form action="/check-out" method="GET" class="col-12 text-right mt-3 p-0">
                            <button class=" btn p-3 " type="submit" onclick="this.form.submit()"> PROCEED TO CHECKOUT </button>
                        </form>
                </div> 
            </div>

        </div>
    </section>

    <!--Product Description-->

    <div class="space"></div>

