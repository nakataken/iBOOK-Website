<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">

    <title>Admin Page</title>

    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Righteous">
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Open+Sans+Condensed:300,300i,700">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/adminDashboard.css">
        <link rel="shortcut icon" href="images/new/eb4.png" type="image/x-icon" />
    <script src="https://kit.fontawesome.com/85f9dbedb7.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.3.0/dist/chart.min.js"></script>
</head>

<body>

    {{> adminHeader}}

    <!--Begin page content-->
    <div class="container-fluid px-lg-4">
        <div class="row">
            <div class="col-md-12 mt-lg-4 mt-4">
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
                </div>
            </div>
            <div class="col-md-12">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="card">
                            <div class="card-body" id="sales-box">
                                <h5 class="card-title mb-4">
                                    Books
                                </h5>
                                <h1 class="display-5 mt-1 mb-3">
                                    {{#each booksCount}}
                                    {{this.booksCount}}
                                    {{/each}}
                                </h1>
                                <div class="mb-1">
                                    <span class="text-danger"></span>

                                    <span class="text-muted">Total number of books</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="card">
                            <div class="card-body" id="user-box">
                                <h5 class="card-title mb-4">
                                    Users
                                </h5>
                                <h1 class="display-5 mt-1 mb-3">
                                    {{#each usersCount}}
                                    {{this.usersCount}}
                                    {{/each}}
                                </h1>
                                <div class="mb-1">
                                    <span class="text-danger"></span>
                                    <span class="text-muted">Total number of users</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="card">
                            <div class="card-body" id="book-box">
                                <h5 class="card-title mb-4">
                                    Sales
                                </h5>
                                <h1 class="display-5 mt-1 mb-3">
                                    {{#each totalSales}}
                                    P{{this.totalSales}}
                                    {{/each}}
                                </h1>
                                <div class="mb-1">
                                    <span class="text-danger">
                                        <i class="mid mid-arrow-bottom-right"></i>
                                    </span>
                                    <span class="text-muted">Total amount of sales</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{!-- Chart --}}


                    <form action="/adminSelectChart" method="POST">
                        <div class="dl float-left">
                            <select class="custom-select" name="selectCategory" id="selectCategory" onchange="this.form.submit()">
                                <option class="text-muted" name="category" value="default">All</option>
                                <option class="text-muted" name="category" value="all">Select All</option>
                                <option name="category" value="Agriculture, Aquaculture, and Food Service">Agriculture, Aquaculture, and Food Service</option>
                                <option name="category" value="Architecture and Planning">Architecture and Planning</option>
                                <option name="category" value="Arts and Applied">Arts and Applied</option>
                                <option name="category" value="Business, Economics, Finance, and Accounting">Business, Economics, Finance, and Accounting
                                </option>
                                <option name="category" value="Chemistry">Chemistry</option>
                                <option name="category" value="Computer Science and Information Technology">Computer Science and Information Technology</option>
                                <option name="category" value="Chemistry">Earth, Space, and Environmental Science</option>
                                <option name="category" value="Humanities">Humanities</option>
                                <option name="category" value="Law and Criminology">Law and Criminology</option>
                                <option name="category" value="Life Science">Life Science</option>
                                <option name="category" value="Mathematics and Statistics">Mathematics and Statistics</option>
                                <option name="category" value="Medicine">Medicine</option>
                                <option name="category" value="Novel">Novel</option>
                                <option name="category" value="Life Science">Nursing, Dentistry, and Healthcare</option>
                                <option name="category" value="Physical Science and Enginering">Physical Science and Enginering</option>
                                <option name="category" value="Psychology">Psychology</option>
                                <option name="category" value="Social and Behavioral Science">Social and Behavioral Science</option>
                                <option name="category" value="Veterinary Medicine">Veterinary Medicine</option>
                            </select>
                        </div>  
                    </form>

                    <div>
                        <canvas id="myChart" width="1000" height="450"></canvas>
                    </div>
                    <div class="col-md-12 mt-4">
                        <div class="table-responsive">
                            <table class="table v-middle">
                                <thead>
                                    <tr class="bg-light">
                                        <th class="border-top-0">ID</th>
                                        <th class="border-top-0">Book Cover</th>
                                        <th class="border-top-0">Title</th>
                                        <th class="border-top-0">Author</th>
                                        <th class="border-top-0">Description</th>
                                        <th class="border-top-0">Category</th>
                                        <th class="border-top-0">Price</th>
                                        <th class="border-top-0">Date Created</th>
                                        <th class="border-top-0">Date Modified</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#if message}}
                                    <p class="alert alert-danger text-center p-1">{{message}}</p>
                                    {{/if}}
                                    {{#each bookData}}

                                    <tr>
                                        <td>
                                            {{this.BOOK_ID}}
                                        </td>
                                        <td>
                                            <span><img src='http://localhost:8080/uploadedImages/{{this.BOOK_COVER}}'>
                                        </td></span>
                                        </td>
                                        <td>
                                            {{this.BOOK_TITLE}}
                                        </td>
                                        <td>
                                            {{this.BOOK_AUTHOR}}
                                        </td>
                                        <td>
                                            {{this.BOOK_DESC}}
                                        </td>
                                        <td>
                                            {{this.BOOK_CATEGORY}}
                                        </td>
                                        <td>
                                            {{this.BOOK_PRICE}}
                                        </td>
                                        <td>
                                            {{this.BOOK_CREATED_DATE}} </td>
                                        <td>
                                            {{this.BOOK_MODIFIED_DATE}} </td>
                                    </tr>

                                    {{/each}}

                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

{{> adminFooter}}
    
    </div>
    </div>
    </div>
    </div>
{{!-- ['book1', 'book2', 'book3'] [1,2,3] --}}
    <script>

        let books = JSON.parse(decodeURI("{{books}}"));
        let bookSales = JSON.parse(decodeURI("{{bookSales}}"));
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: books,
                datasets: [{
                    data: bookSales,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 2,
                    barThickness: 30
                }]
            },
            options: {
                indexAxis: 'y',
                plugins: {
                    title: {
                        align: 'center',
                        display: 'true',
                        text: "{{chartName}}"
                    },
                    legend: {
                        display: false
                    }
                },
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    </script>

    <script type="text/javascript">
        $('#bar').click(function () {
            $(this).toggleClass('open');
            $('#page-content-wrapper, #sidebar-wrapper').toggleClass('toggled');
        });
    </script>

    <script>
        // When the user clicks on <div>, open the popup
        function myFunction() {
            var popup = document.getElementById("myPopup");
            popup.classList.toggle("show");
        }
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>