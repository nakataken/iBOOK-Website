<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>Add a Book</title>

    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Righteous">
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Open+Sans+Condensed:300,300i,700">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/adminAddBook.css">
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon" />
    <script src="https://kit.fontawesome.com/85f9dbedb7.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
</head>

<body>

   {{> adminHeader}}

                    <!--Begin page content-->
                    <div class="container-fluid px-lg-4">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-lg-12 col-xl-10 card flex-row mt-5 mx-auto px-0">
                                        <div class="img-left d-none d-md-flex">

                                        </div>
                                        <div class="card-body">
                                            <h4 class="title text-left mt-4">
                                                ADD A BOOK
                                            </h4>
                                            <form class="addBook form-box px-3" action="/data/adminAddBook"
                                                method="POST" enctype="multipart/form-data">
                                                <div class="form-input">
                                                    <span><i class="fas fa-book"></i></i></span>
                                                    <input type="text" name="bookTitle" placeholder="Title"
                                                        tabindex="10" maxlength="30" required>
                                                </div>
                                                <div class="form-input">
                                                    <span><i class="fas fa-address-book"></i></span>
                                                    <input type="text" name="bookAuthor" placeholder="Author"
                                                        tabindex="10" maxlength="30" required>
                                                </div>
                                                <div class="mb-3">
                                                    <span>
                                                        <hr class="mx-1">
                                                    </span>
                                                     <h6 class="title text-left mt-2 ml-n1 mb-2">
                                                     BOOK COVER
                                                     </h6>
                                                    <input type="file" id="bookCover" name="bookCover" accept:""/
                                                        required>
                                                </div>
                                                 <div class="mb-3">
                                                    <span>
                                                        <hr class="mx-1">
                                                    </span>
                                                    <h6 class="title text-left mt-2 ml-n1 mb-2">
                                                     BOOK FILE
                                                    </h6>
                                                    <input type="file" id="bookFile" name="bookFile" accept:""/
                                                        required>
                                                </div>
                                                <div class="form-input">
                                                    <textarea name="bookDesc" placeholder="Description"
                                                        required maxlength="300"></textarea>
                                                </div>
                                                <div class="form-input">
                                                    <span><i class="fas fa-tag"></i></span>
                                                    <input type="text" name="bookPrice" placeholder="Price"
                                                        tabindex="10"  required maxlength="8" required>
                                                </div>
                                                <div class="mb-3">
                                                    <label for="" class="form-inline">Book Category:
                                                        <span>
                                                            <hr class="mx-2"></span>
                                                        <select class="custom-select" name="bookCategory"
                                                            id="bookCategory">
                                                            <option value="Action and Adventure">Action and Adventure
                                                            </option>
                                                            <option value="Childrens Fiction">Children's Fiction
                                                            </option>
                                                            <option value="Comic and Graphic Novel">Comic and Graphic
                                                                Novel</option>
                                                            <option value="Drama">Drama</option>
                                                            <option value="Fairy Tale">Fairy Tale</option>
                                                            <option value="Fantasy and Sci-Fi">Fantasy and Sci-Fi
                                                            </option>
                                                            <option value="Horror and Thriller">Horror and Thriller
                                                            </option>
                                                            <option value="Mystery">Mystery</option>
                                                            <option value="Romance">Romance</option>
                                                            <option value="Young Adult">Young Adult</option>
                                                        </select>
                                                    </label>
                                                </div>
                                                <div class="mb-3 text-left">
                                                    <button type="submit" class="btn text-uppercase">
                                                        Save
                                                    </button>
                                                    <a href="/adminBooksData/1"
                                                        class="btn text-uppercase ml-3" 
                                                        onclick="
                                                                if (!confirm('Are you sure you want to cancel?'))
                                                                {
                                                                    return false
                                                                }"
                                                        
                                                        
                                                        >cancel</a>
                                                </div>
                                                <hr class="my-4">
                                                {{#if message}}
                                                <p class="alert alert-danger text-center p-1">{{message}}</p>
                                                {{/if}}
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {{> adminFooter}}

                </div>
            </div>
        </div>
    </div>



    <script type="text/javascript">
        $('#bar').click(function () {
            $(this).toggleClass('open');
            $('#page-content-wrapper, #sidebar-wrapper').toggleClass('toggled');
        });
    </script>



    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>